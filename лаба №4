/ Задание 1
#include <iostream>
using namespace std;
int main()
{
	int n;
	bool flag = false;
	int arr[10005];
	cin >> n;
	for (int i = 0; i < n; i++)
	{
		cin >> arr[i];
	}
	for (int i = 0; i < n - 1; i++)
	{
		for (int j = i + 1; j < n; j++)
		{
			if (arr[i] == arr[j])
			{
				flag = true;
				break;
			}

		}
		if (flag == true)
		{
			break;
		}
	}

	if (flag == true)
	{
		for (int i = 0; i < n - 1; i++)
		{
			for (int j = i + 1; j < n; j++)
			{
				if (arr[i] % 10 < arr[j] % 10)
					swap(arr[i], arr[j]);
			}

		}
	}
	for (int i = 0; i < n; i++)
	{
		cout << arr[i] << " ";
	}
	system("pause");
}
